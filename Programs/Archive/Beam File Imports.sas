			%PUT &FILE;
			%PUT &EXTENSION;

			DATA _NULL_;
				CALL SYMPUTX("FILE_USE","&FILE",'G');
				CALL SYMPUTX("TOTAL_COUNTER_USE",&TOTAL_COUNTER.,'G');
			RUN;	

			/*IMPORT PIPE DELIMITED FILE	*/
			%INCLUDE "&WHEREPRGMSAT.\BEAM FILE IMPORT.SAS";
				%BEAM_IMPORT
