PROC SORT DATA=DIRLIST_GEO_IN NODUPKEY;
BY FILE_NAME_FULL ;
RUN;

DATA COUNT_FILES_IN;
	SET DIRLIST_GEO_IN;
	BY FILE_NAME_FULL;
	RETAIN COUNT 0;
	COUNT+1;
	TOTAL_COUNTER = COUNT;
RUN;


